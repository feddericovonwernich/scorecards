{
  "_comment": "NOTE: This file is duplicated in action/package.json for Docker build context. Keep both files in sync!",
  "name": "scorecards",
  "version": "1.0.0",
  "description": "Automated quality scoring for service repositories",
  "main": "docs/src/main.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:js && npm run test:bash && npm run test:python",
    "test:js": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:bash": "bats tests/unit/bash/",
    "test:python": "pytest tests/unit/python/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint docs/**/*.js checks/**/*.js",
    "format": "prettier --write '**/*.{js,json,md,yml,yaml}'"
  },
  "keywords": [
    "quality",
    "scoring",
    "github-action",
    "catalog"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "js-yaml": "^4.1.0",
    "marked": "^11.1.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.56.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
