{
  "_comment": "NOTE: This file is duplicated in action/package.json for Docker build context. Keep both files in sync!",
  "name": "scorecards",
  "version": "1.0.0",
  "description": "Automated quality scoring for service repositories",
  "main": "docs/src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite docs",
    "build": "vite build docs",
    "preview": "vite preview docs",
    "test": "npm run test:js && npm run test:bash && npm run test:python",
    "test:js": "NODE_OPTIONS=--experimental-vm-modules jest --selectProjects node",
    "test:react": "NODE_OPTIONS=--experimental-vm-modules jest --selectProjects react",
    "test:bash": "bats tests/unit/bash/",
    "test:python": "pytest tests/unit/python/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:coverage": "COVERAGE=true PLAYWRIGHT_HTML_OPEN=never playwright test && npx nyc report",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint 'docs/**/*.{js,ts,tsx}' 'checks/**/*.js'",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write '**/*.{js,ts,json,md,yml,yaml}'"
  },
  "keywords": [
    "quality",
    "scoring",
    "github-action",
    "catalog"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@vitejs/plugin-react": "^5.1.1",
    "clsx": "^2.1.1",
    "js-yaml": "^4.1.0",
    "marked": "^11.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "swagger-ui-dist": "^5.30.3",
    "yaml": "^2.3.4",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "nyc": "^17.1.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.0",
    "vite-plugin-istanbul": "^7.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
