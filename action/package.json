{
  "_comment": "NOTE: This file is duplicated from ../package.json for Docker build context. Keep both files in sync!",
  "name": "scorecards",
  "version": "1.0.0",
  "description": "Automated quality scoring for service repositories",
  "main": "catalog/src/main.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:js && npm run test:bash && npm run test:python",
    "test:js": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:bash": "bats tests/unit/bash/",
    "test:python": "pytest tests/unit/python/",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint catalog/**/*.js checks/**/*.js",
    "format": "prettier --write '**/*.{js,json,md,yml,yaml}'"
  },
  "keywords": ["quality", "scoring", "github-action", "catalog"],
  "license": "Apache-2.0",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "js-yaml": "^4.1.0",
    "marked": "^11.1.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
