{
  "compilerOptions": {
    // JavaScript interop (allow gradual migration)
    "allowJs": true,
    "checkJs": false,

    // Strictness - enabled for type safety
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,

    // Module settings
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // React/JSX support
    "jsx": "react-jsx",

    // Path aliases
    "baseUrl": ".",
    "paths": {
      "@config/*": ["docs/src/config/*"],
      "@utils/*": ["docs/src/utils/*"],
      "@ui/*": ["docs/src/ui/*"],
      "@api/*": ["docs/src/api/*"],
      "@services/*": ["docs/src/services/*"],
      "@types": ["docs/src/types/index.ts"]
    },

    // Output settings (Vite handles actual output)
    "noEmit": true,
    "declaration": false
  },
  "include": [
    "docs/src/**/*.js",
    "docs/src/**/*.ts",
    "docs/src/**/*.tsx",
    "docs/vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "docs/lib/**",
    "docs/dist/**",
    "tests/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
